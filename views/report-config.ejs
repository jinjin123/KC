<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            视图配置
            <small>云端couchDB生成视图，用于报表读取</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> KC配置</a></li>
            <li class="active">视图配置</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="box">

            <div class="box-body">
                <table id="report_config" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th class="col-xs-4">商家编号<span class="arrow asc"></span></th>
                        <th class="col-xs-4">视图<span class="arrow asc"></span></th>
                        <th><label>操作</label></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i in mc_list) {%>
                    <tr>
                        <form action="" method="post">
                            <td><span><%= mc_list[i].mc_id %></span></td>
                            <td><span><%= mc_list[i].mc_id %></span></td>
                            <td>
                                <button type="button" class="btn btn-primary btn-sm" onclick="buildDBViews($(this))">建立视图</button>
                                <button type="button" class="btn btn-warning btn-sm" onclick="reBuildDBViews($(this))">重建视图</button>
                            </td>
                        </form>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->

    </section>
    <!-- /.content -->
</div>